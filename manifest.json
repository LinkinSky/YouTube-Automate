{
  "manifest_version": 3,
  "name": "YouTube Auto Jump Ahead",
  "version": "1.0.0",
  "description": "Automatically clicks the 'Jump ahead' button on YouTube videos.",
  
  "permissions": [
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://www.youtube.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "YouTube Auto Jump Ahead",
    "default_icon": {
      "32": "icons/icon32.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}